#include <iostream>
#include <vector>

int main() {
    int n;
    std::cin >> n;

    std::vector<std::pair<int, int>> a(n);

    for (int i = 0; i < n; i++) {
        std::cin >> a[i].first >> a[i].second;
    }

    for (int i = 0; i < n; i++) {
        int sum = a[i].first + a[i].second;
        std::cout << sum << std::endl;
    }

    return 0;
}
