#include <stdio.h>
int main() {
    int P; 
    double totalPrice; 
    scanf("%d", &P);
    if (P >= 100) {
        totalPrice = P * 100 * 0.7; 
    } else if (P >= 30) {
        totalPrice = P * 100 * 0.8; 
    } else if (P >= 10) {
        totalPrice = P * 100 * 0.9; 
    } else {
        totalPrice = P * 100; 
    }
    printf("%.0f\n", totalPrice);
    return 0;
}
